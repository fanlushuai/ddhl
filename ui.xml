<vertical>
    <appbar>
        <toolbar bg="#4EBFDD" layout_height="50" margin="-2" id="toolbar" title="项目标题" />
    </appbar>
    <ScrollView>
        <vertical marginTop="5">
            <card w="*" h="auto" margin="10 5" cardCornerRadius="2dp" cardElevation="1dp" gravity="center_vertical">
                <vertical padding="18 8" h="auto">
                    <linear>
                        <Switch marginLeft="0" marginRight="12" marginTop="0" marginBottom="0" layout_weight="1" id="autoService" text="无障碍服务" textSize="15sp" checked="{{auto.service != null}}" />
                        <Switch margin="12 0" layout_weight="1" id="floatyService" text="悬浮窗权限" textSize="15sp" checked="false" />
                    </linear>
                </vertical>
                <View bg="#4EBFDD" h="*" w="5" />
            </card>
            <card w="*" h="auto" margin="10 5" cardCornerRadius="2dp" cardElevation="1dp" gravity="center_vertical">
                <vertical padding="18 8" h="auto">
                    <horizontal>
                        <checkbox id="cbGoTime" textColor="black" marginLeft='5'checked="false"/>
                        <text text="【出发时间】" w="auto" textStyle="bold" textSize="14sp" marginRight='1'/>
                        <input gravity="center" id="goTimeBegin" inputType="number" text="25" color="#666666" w="65" marginLeft='5'/>
                        <text text=" - " textStyle="bold" textSize="15sp"/>
                        <input gravity="center" id="goTimeEnd" inputType="number" text="60" color="#666666" w="65"/>
                        <text text="(点)" textStyle="bold" textSize="13sp" marginLeft='1'/>
                    </horizontal>
                    <horizontal>
                        <checkbox id="cbOnePeople" textColor="black" marginLeft='5'checked="false"/>
                        <text text="【独享人数】" w="auto" textStyle="bold" textSize="14sp" marginRight='1'/>
                        <input gravity="center" id="onePeolpeMinCount" inputType="number" text="25" color="#666666" w="65" marginLeft='5'/>
                        <text text=" - " textStyle="bold" textSize="15sp"/>
                        <input gravity="center" id="onePeolpeMaxCount" inputType="number" text="60" color="#666666" w="65"/>
                        <text text="(位)" textStyle="bold" textSize="13sp" marginLeft='1'/>
                    </horizontal>
                    <horizontal>
                        <checkbox id="cbMultiPeople" textColor="black" marginLeft='5'checked="false"/>
                        <text text="【拼座人数】" w="auto" textStyle="bold" textSize="14sp" marginRight='1'/>
                        <input gravity="center" id="multiPeolpeMinCount" inputType="number" text="25" color="#666666" w="65" marginLeft='5'/>
                        <text text=" - " textStyle="bold" textSize="15sp"/>
                        <input gravity="center" id="multiPeolpeMaxCount" inputType="number" text="60" color="#666666" w="65"/>
                        <text text="(位)" textStyle="bold" textSize="13sp" marginLeft='1'/>
                    </horizontal>
                    <horizontal>
                        <checkbox id="cbComfortPeople" textColor="black" marginLeft='5'checked="false"/>
                        <text text="【舒适人数】" w="auto" textStyle="bold" textSize="14sp" marginRight='1'/>
                        <input gravity="center" id="comfortPeopleMinCount" inputType="number" text="25" color="#666666" w="65" marginLeft='5'/>
                        <text text=" - " textStyle="bold" textSize="15sp"/>
                        <input gravity="center" id="comfortPeopleMaxCount" inputType="number" text="60" color="#666666" w="65"/>
                        <text text="(位)" textStyle="bold" textSize="13sp" marginLeft='1'/>
                    </horizontal>
                    <horizontal>
                        <checkbox id="cbOrderPrice" textColor="black" marginLeft='5'checked="false"/>
                        <text text="【订单金额】" w="auto" textStyle="bold" textSize="14sp" marginRight='1'/>
                        <input gravity="center" id="orderPriceMin" inputType="number" text="25" color="#666666" w="65" marginLeft='5'/>
                        <text text=" - " textStyle="bold" textSize="15sp"/>
                        <input gravity="center" id="orderPriceMax" inputType="number" text="60" color="#666666" w="65"/>
                        <text text="(元)" textStyle="bold" textSize="13sp" marginLeft='1'/>
                    </horizontal>
                    <horizontal>
                        <checkbox id="cbOrderDis" textColor="black" marginLeft='5'checked="false"/>
                        <text text="【起点距离】" w="auto" textStyle="bold" textSize="14sp" marginRight='1'/>
                        <input gravity="center" id="orderDisMin" inputType="number" text="25" color="#666666" w="65" marginLeft='5'/>
                        <text text=" - " textStyle="bold" textSize="15sp"/>
                        <input gravity="center" id="orderDisMax" inputType="number" text="60" color="#666666" w="65"/>
                        <text text="(KM)" textStyle="bold" textSize="13sp" marginLeft='1'/>
                    </horizontal>
                </vertical>
                <View bg="#4EBFDD" h="*" w="5" />
            </card>

            <card w="*" h="auto" margin="10 5" cardCornerRadius="2dp" cardElevation="1dp" gravity="center_vertical">
                <vertical padding="18 8" h="auto">
                    <horizontal>
                        <text text='【顺路程度】' w="auto" textStyle="bold" textSize="14sp" marginRight='1'/>
                        <input gravity="center" id="byWayLevel" inputType="number" text="80" color="#666666" w="65"/>
                        <text text="%" textStyle="bold" textSize="13sp" marginLeft='1'/>
                    </horizontal>
                    <horizontal>
                        <text text="【乘客人数】" w="auto" textStyle="bold" textSize="14sp" marginRight='1'/>
                        <input gravity="center" id="peopleCountMin" inputType="number" text="25" color="#666666" w="65" marginLeft='5'/>
                        <text text=" - " textStyle="bold" textSize="15sp"/>
                        <input gravity="center" id="peopleCountMax" inputType="number" text="60" color="#666666" w="65"/>
                        <text text="(位)" textStyle="bold" textSize="13sp" marginLeft='1'/>
                    </horizontal>
                    <horizontal>
                        <text text="【独享不限】" textStyle="bold" textSize="14sp" marginRight='1'/>
                        <checkbox id="cbOnePeopleNotLimit" textColor="black" marginLeft='5'checked="false"/>
                    </horizontal>
                    <horizontal>
                        <text text="【价格】" w="auto" textStyle="bold" textSize="14sp" marginRight='1'/>
                        <input gravity="center" id="orderPriceMin1" inputType="number" text="25" color="#666666" w="65" marginLeft='5'/>
                        <text text=" - " textStyle="bold" textSize="15sp"/>
                        <input gravity="center" id="orderPriceMax1" inputType="number" text="60" color="#666666" w="65"/>
                        <text text="(元)" textStyle="bold" textSize="13sp" marginLeft='1'/>
                    </horizontal>
                    <horizontal>
                        <text text="【距离】" w="auto" textStyle="bold" textSize="14sp" marginRight='1'/>
                        <input gravity="center" id="orderDisMin1" inputType="number" text="25" color="#666666" w="65" marginLeft='5'/>
                        <text text=" - " textStyle="bold" textSize="15sp"/>
                        <input gravity="center" id="orderDisMax1" inputType="number" text="60" color="#666666" w="65"/>
                        <text text="(KM)" textStyle="bold" textSize="13sp" marginLeft='1'/>
                    </horizontal>
                    <horizontal>
                        <text text='【刷新间隔】' w="auto" textStyle="bold" textSize="14sp" marginRight='1'/>
                        <input gravity="center" id="refreshIntervalSec" inputType="number" text="15" color="#666666" w="65"/>
                        <text text="(秒)" textStyle="bold" textSize="13sp" marginLeft='1'/>
                    </horizontal>
                </vertical>
                <View bg="#4EBFDD" h="*" w="5" />
            </card>

            <card w="*" h="auto" margin="10 5" cardCornerRadius="2dp" cardElevation="1dp" gravity="center_vertical">
                <vertical padding="18 8" h="auto">
                    <text text="关键字：前面带+、-符号表示，包含和排除" textSize="11sp" textColor="red" w="auto" textStyle="bold" layout_weight="0.2" />
                    <linear>
                        <text text="起点" textSize="14sp" textColor="black" w="auto" textStyle="bold" />
                        <input id="fromKeyWords" hnit='+北京-佛山' textSize="14sp" color="black" paddingLeft="5" ems="3" inputType="text" w="*"/>
                    </linear>
                    <linear>
                        <text text="终点" textSize="14sp" textColor="black" w="auto" textStyle="bold" />
                        <input id="endKeyWords" text='10' textSize="14sp" color="black" paddingLeft="5" ems="3" inputType="text" w="*" />
                    </linear>
                </vertical>
                <View bg="#4EBFDD" h="*" w="5" />
            </card>

            <card w="*" h="auto" margin="10 5" cardCornerRadius="2dp" cardElevation="1dp" gravity="center_vertical">
                <vertical padding="18 8" h="auto">
                    <horizontal>
                        <text text="提醒铃声" textStyle="bold" textSize="14sp" marginRight='1'/>
                        <checkbox id="alertMusic" textColor="black" marginLeft='5'checked="false"/>
                        <text text="测试模式" textStyle="bold" textSize="14sp" marginLeft='20' marginRight='1'/>
                        <checkbox id="testMode" textColor="black" marginLeft='5'checked="false"/>
                    </horizontal>
                </vertical>
                <View bg="#4EBFDD" h="*" w="5" />
            </card>

            <card w="*" h="auto" margin="10 5" cardCornerRadius="2dp" cardElevation="1dp" gravity="center_vertical">
                <button id="save" h="auto" text="保 存 配 置" textSize="17" textStyle="bold" color="#ffffff" bg="#4EBFDD" foreground="?selectableItemBackground" layout_gravity="bottom" />
                <View bg="#4EBFDD" h="*" w="5" />
            </card>
            <card w="*" h="auto" margin="10 5" cardCornerRadius="2dp" cardElevation="1dp" gravity="center_vertical">
                <button id="boot" h="auto" text="开 始 运 行" textSize="17" textStyle="bold" color="#ffffff" bg="#4EBFDD" foreground="?selectableItemBackground" layout_gravity="bottom" />
                <View bg="#4EBFDD" h="*" w="5" />
            </card>
        </vertical>
    </ScrollView>
</vertical>